# Enable HTTP/2 if available
<IfModule mod_http2.c>
    Protocols h2 h2c http/1.1
</IfModule>

# Enable gzip compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
</IfModule>

# Set browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Default expiration: 1 hour
  ExpiresDefault "access plus 1 hour"
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Video
  ExpiresByType video/mp4 "access plus 1 month"
  ExpiresByType video/webm "access plus 1 month"
  
  # CSS, JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Add correct content-type for fonts and video
<IfModule mod_mime.c>
  # Fonts
  AddType application/vnd.ms-fontobject .eot
  AddType application/x-font-ttf .ttf
  AddType application/x-font-opentype .otf
  AddType application/x-font-woff .woff
  AddType application/x-font-woff2 .woff2
  AddType image/svg+xml .svg
  
  # Video
  AddType video/mp4 .mp4 .m4v
  AddType video/webm .webm
</IfModule>

# Cache Control Headers
<IfModule mod_headers.c>
  # 1 MONTH for css and js
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
  
  # 1 YEAR for images, icons, video, audio
  <FilesMatch "\.(ico|gif|jpg|jpeg|png|webp|mp4|webm|svg)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  
  # 1 YEAR for fonts
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  
  # Set proper headers for videos to support range requests (streaming)
  <FilesMatch "\.(mp4|webm|m4v)$">
    Header set Accept-Ranges bytes
  </FilesMatch>
</IfModule>

# CORS Headers for fonts
<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>

# Remove ETags as they're set incorrectly by Apache
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>

FileETag None

# Security headers
<IfModule mod_headers.c>
  # Protect against XSS attacks
  Header set X-XSS-Protection "1; mode=block"
  
  # Prevent MIME-sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Don't allow site to be framed
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Enable strict transport security
  Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
</IfModule>

# Prevent directory browsing
Options -Indexes

# Optimize website loading order
<IfModule mod_rewrite.c>
  RewriteEngine on
  
  # Redirect to non-www version of the site
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
  
  # Redirect to HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Remove .html extension
  # Redirect "/page.html" to "/page" and "/folder/page.html" to "/folder/page"
  RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /(.+)\.html\ HTTP
  RewriteRule ^(.+)\.html$ /$1 [R=301,L]
  
  # Internally map "/page" back to "/page.html" and "/folder/page" to "/folder/page.html"
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.+)$ $1.html [L]
</IfModule>
